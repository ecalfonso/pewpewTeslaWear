<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edalfons.pewpewteslawear">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/pptw_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pptw_launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VehicleOfflineActivity" />
        <activity android:name=".CarSelectActivity" />
        <activity android:name=".InfoActivity" />
        <activity
            android:name=".HomeActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeslaApiUnaccessibleActivity"
            android:noHistory="true" />
    </application>

</manifest>